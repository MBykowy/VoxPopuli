@model int
@{
    ViewData["Title"] = "Password Required";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Password Protected Survey</h3>
                </div>
                <div class="card-body">
                    <p>This survey is password protected. Please enter the password provided by the survey creator to continue.</p>

                    <form asp-action="Take" asp-route-id="@Model" method="get">
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required />
                        </div>
                        <button type="submit" class="btn btn-primary">Continue</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

