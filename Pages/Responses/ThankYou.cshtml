@page "{id:int?}"
@model VoxPopuli.Pages.Responses.ThankYouModel
@{
    ViewData["Title"] = "Thank You";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
            <div class="card">
                <div class="card-body">
                    <h1 class="display-4 text-success mb-4">Thank You!</h1>
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    </div>
                    @if (Model.Response?.Survey != null)
                    {
                            <p class="lead">Your response to <strong>@Model.Response.Survey.Title</strong> has been submitted successfully.</p>
                    }
                    else
                    {
                            <p class="lead">Your response has been submitted successfully.</p>
                    }

                    @if (Model.Response?.IsAnonymous == false && User?.Identity?.IsAuthenticated == true)
                    {
                            <p>We appreciate your feedback!</p>
                    }
                    else
                    {
                            <p>Your response has been recorded anonymously.</p>
                    }

                    <div class="mt-4">
                        <a asp-page="/Index" class="btn btn-primary">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
