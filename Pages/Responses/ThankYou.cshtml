@page
@model VoxPopuli.Pages.Responses.ThankYouModel
@{
    ViewData["Title"] = "Thank You for Your Response";
}

<div class="container py-5">
    <div class="text-center">
        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
        </div>

        <h1 class="display-5 mb-3">Thank You!</h1>

        <p class="lead mb-4">
            Your response to "@(Model.Survey?.Title ?? "the survey")" has been submitted successfully.
        </p>

        <div class="mt-5">
            <a asp-page="/Index" class="btn btn-primary me-3">
                <i class="bi bi-house-door me-2"></i>Return to Home
            </a>

            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-page="/Surveys/List" class="btn btn-outline-secondary">
                    <i class="bi bi-list-check me-2"></i>View My Surveys
                </a>
            }
        </div>
    </div>
</div>