@page
@model VoxPopuli.Pages.Surveys.ListModel
@{
    ViewData["Title"] = "My Surveys";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>My Surveys</h1>
            <p class="lead">View, edit and manage your surveys</p>
        </div>
        <div>
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Survey
            </a>
        </div>
    </div>

    @if (!Model.Surveys.Any())
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">No surveys found</h4>
            <p>You haven't created any surveys yet. Click the "Create New Survey" button to get started.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var survey in Model.Surveys)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 survey-card">
                        <div class="card-body">
                            <h5 class="card-title">@survey.Title</h5>
                            <p class="card-text">@(survey.Description?.Length > 100 ? survey.Description.Substring(0, 100) + "..." : survey.Description)</p>

                            <div class="d-flex justify-content-between">
                                <span class="badge bg-@(survey.IsActive ? "success" : "secondary")">
                                    @(survey.IsActive ? "Active" : "Inactive")
                                </span>
                                <span class="badge bg-info">@survey.ResponseCount responses</span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <a asp-page="Edit" asp-route-id="@survey.SurveyId" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-page="Results" asp-route-id="@survey.SurveyId" class="btn btn-outline-success">
                                    <i class="bi bi-bar-chart"></i> Results
                                </a>
                                <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#" onclick="copyShareLink(@survey.SurveyId)">
                                            <i class="bi bi-share"></i> Share
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-page="ExportResults" asp-route-id="@survey.SurveyId">
                                            <i class="bi bi-download"></i> Export
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#deleteSurveyModal" data-survey-id="@survey.SurveyId" data-survey-title="@survey.Title">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteSurveyModal" tabindex="-1" aria-labelledby="deleteSurveyModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteSurveyModalLabel">Confirm Delete</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete the survey "<span id="surveyTitle"></span>"? This action cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <form method="post" asp-page-handler="Delete">
                            <input type="hidden" id="surveyIdToDelete" name="id" value="" />
                            <button type="submit" class="btn btn-danger">Delete Survey</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Set up modal data
        var deleteSurveyModal = document.getElementById('deleteSurveyModal');
        deleteSurveyModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var surveyId = button.getAttribute('data-survey-id');
            var surveyTitle = button.getAttribute('data-survey-title');

            var modalTitle = document.getElementById('surveyTitle');
            var idInput = document.getElementById('surveyIdToDelete');

            modalTitle.textContent = surveyTitle;
            idInput.value = surveyId;
        });

        // Copy share link function
        function copyShareLink(surveyId) {
            var url = window.location.origin + "/Responses/Take?id=" + surveyId;
            navigator.clipboard.writeText(url).then(function() {
                alert('Survey link copied to clipboard!');
            }, function() {
                alert('Failed to copy link.');
            });
        }
    </script>
}
