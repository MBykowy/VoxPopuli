@page
@model VoxPopuli.Pages.Admin.Debug.ManageRolesModel
@{
    ViewData["Title"] = "Debug Role Management";
}

@if (!Model.IsDevelopment)
{
    <div class="alert alert-danger">
        <h4>Access Denied</h4>
        <p>This page is only available in development environment.</p>
    </div>
    return;
}

<div class="container">
    <h1 class="mb-4"><i class="bi bi-bug"></i> Debug Role Manager</h1>
    <div class="alert alert-warning">
        <strong>Development Only:</strong> This page is only visible in development environment and should not be deployed to production.
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle me-2"></i> @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">Grant Admin & Supervisor Roles</h5>
        </div>
        <div class="card-body">
            <p class="text-muted">Enter the email address of the user you want to grant Admin and Supervisor roles to.</p>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" placeholder="user@example.com" />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-shield-fill-check me-2"></i> Grant Admin Access
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">How to Use</h5>
        </div>
        <div class="card-body">
            <ol>
                <li>First register a user account through normal registration</li>
                <li>Enter that user's email address in the form above</li>
                <li>Click "Grant Admin Access"</li>
                <li>Log out and log back in for the roles to take effect</li>
            </ol>
            <p>The user will have both Admin and Supervisor roles after this process.</p>
        </div>
    </div>
</div>