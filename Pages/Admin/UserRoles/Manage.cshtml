@page
@model VoxPopuli.Pages.Admin.UserRoles.ManageModel
@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="container">
    <h1 class="mb-4"><i class="bi bi-person-gear"></i> Manage User Roles</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">User: @Model.Username</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="fw-bold">Email:</label>
                <span>@Model.Email</span>
            </div>

            <form method="post">
                <input type="hidden" asp-for="UserId" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Available Roles</h6>
                    </div>
                    <div class="card-body">
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {
                            <div class="form-check mb-2">
                                <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                                <input class="form-check-input" asp-for="@Model.Roles[i].IsSelected" id="role-@i" />
                                <label class="form-check-label" for="role-@i">
                                    @Model.Roles[i].RoleName
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>